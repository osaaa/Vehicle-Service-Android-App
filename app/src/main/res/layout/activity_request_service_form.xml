<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestServiceForm">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:text="Fill out the form to request a service"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:visibility="invisible"
        android:id="@+id/firstNameZ"
        android:layout_width="200dp"
        android:hint="Enter first name"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <EditText
        android:visibility="invisible"
        android:id="@+id/lastNameZ"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Enter last name"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstNameZ" />

    <EditText
        android:visibility="invisible"
        android:id="@+id/addressZ"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Enter address"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastNameZ" />

    <EditText
        android:visibility="invisible"
        android:id="@+id/phoneZ"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Enter phone number"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addressZ" />

    <EditText
        android:visibility="invisible"
        android:id="@+id/birthdateZ"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:hint="birth date (format: yyyymmdd)"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneZ" />

    <EditText
        android:visibility="invisible"
        android:id="@+id/licenceZ"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Enter licence type"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/birthdateZ" />

    <EditText
        android:visibility="invisible"
        android:id="@+id/emailZ"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Enter enter your email"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/licenceZ" />

    <EditText
        android:visibility="invisible"
        android:id="@+id/dateZ"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:hint="service date (format: yyyymmdd)"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailZ" />

    <EditText
        android:visibility="invisible"
        android:id="@+id/timeZ"
        android:layout_width="200dp"
        android:textSize="12dp"
        android:layout_height="wrap_content"
        android:hint="Enter service time (ex: 1pm)"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateZ" />

    <Button

        android:id="@+id/submitRequestZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="28dp"
        android:text="send request"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/goBackZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="go back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/submitRequestZ"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>